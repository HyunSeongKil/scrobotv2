<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="popSrchTermsSql">
	
	<select id="srchTerms" parameterType="Map" resultType="Map">
		SELECT * 
		FROM WORD
		<where>
			<if test="!WORD_NM.equals('') and WORD_NM != null">
				AND WORD_NM LIKE CONCAT('%', #{WORD_NM}, '%')
			</if>
			<if test="!WORD_ENG_NM.equals('') and WORD_ENG_NM != null">
				AND WORD_ENG_ABRV_NM LIKE CONCAT('%', #{WORD_ENG_NM}, '%')
			</if>
		</where>
	</select>
			
</mapper>